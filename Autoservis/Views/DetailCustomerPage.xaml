<Page x:Class="Autoservis.Views.DetailCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Autoservis.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailCustomerPage"
      Background="White">

    <Grid>
        <Grid x:Name="DetailCustomerLayout">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <TextBlock x:Name="AddOrderTitle" HorizontalAlignment="Center">Detail zakaznika</TextBlock>
                <Button x:Name="CloseButton" Click="CloseButton_Click" 
                        Height="50" Width="50" 
                        HorizontalAlignment="Right" 
                        Background="Red"
                        Content="X" Foreground="White" FontSize="20" /> 
            </Grid>

            <!-- Informations -->
            <Grid x:Name="Informations" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="CustomerInformations" Grid.Row="0" Margin="10">
                    <TextBlock x:Name="CustomerNameText">Jmeno:*</TextBlock>
                    <TextBox x:Name="CustomerNameBox"></TextBox>

                    <TextBlock x:Name="CustomerPhoneText">Telefoni cislo:</TextBlock>
                    <TextBox x:Name="CustomerPhoneBox"></TextBox>

                    <TextBlock x:Name="CustomerEmailText">E-mail:</TextBlock>
                    <TextBox x:Name="CustomerEmailBox"></TextBox>

                    <TextBlock x:Name="CustomerAddressText">Adresa:</TextBlock>
                    <TextBox x:Name="CustomerAddressBox"></TextBox>

                    <TextBlock x:Name="CustomerZIPText">PSC:</TextBlock>
                    <TextBox x:Name="CustomerZIPBox"></TextBox>

                    <TextBlock x:Name="CustomerNotesText">Poznamka:</TextBlock>
                    <TextBox x:Name="CustomerNotesBox"></TextBox>
                </StackPanel>

                <Grid x:Name="CarOrderList" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="CarList" Grid.Column="0" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Model" Binding="{Binding BrandModel}"/>
                            <DataGridTextColumn Header="SPZ" Binding="{Binding SPZ}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid x:Name="OrderList" Grid.Column="1" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazev" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Cena celkem" Binding="{Binding TotalPrice}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
        
    </Grid>
</Page>
