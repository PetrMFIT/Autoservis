<Page x:Class="Autoservis.Views.DetailCarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Autoservis.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailCarPage"
      Background="White">

    <Grid>
        <Grid x:Name="DetailCarLayout">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <TextBlock x:Name="DetailCarTitle" HorizontalAlignment="Center">Detail auta</TextBlock>
                <Button x:Name="CloseButton" Click="CloseButton_Click" 
                Height="50" Width="50" 
                HorizontalAlignment="Right" 
                Background="Red"
                Content="X" Foreground="White" FontSize="20" />
            </Grid>

            <!-- Informations -->
            <Grid x:Name="Informations" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="CarInformations" Grid.Row="0" Margin="10">
                    <TextBlock x:Name="CarBrandModelText">Znacka/model:*</TextBlock>
                    <TextBox x:Name="CarBrandModelBox"></TextBox>

                    <TextBlock x:Name="CarSPZText">SPZ:*</TextBlock>
                    <TextBox x:Name="CarSPZBox"></TextBox>

                    <TextBlock x:Name="CarVINText">VIN:</TextBlock>
                    <TextBox x:Name="CarVINBox"></TextBox>

                    <TextBlock x:Name="CarOwnerText">Majitel:</TextBlock>
                    <TextBox x:Name="CarOwnerBox"></TextBox>

                    <!-- Car combobox -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <TextBlock x:Name="CarYearText" Margin="0,0,5,0">Rok vyroby:</TextBlock>
                            <ComboBox x:Name="CarYearComboBox" Width="60" Visibility="Collapsed"></ComboBox>
                            <TextBox x:Name="CarYearBox"></TextBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                            <TextBlock x:Name="CarFuelText" Margin="0,0,5,0">Palivo:</TextBlock>
                            <ComboBox x:Name="CarFuelComboBox" Width="70" Visibility="Collapsed"></ComboBox>
                            <TextBox x:Name="CarFuelBox"></TextBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2">
                            <TextBlock x:Name="CarTypeText" Margin="0,0,5,0">Typ:</TextBlock>
                            <ComboBox x:Name="CarTypeComboBox" Width="80" Visibility="Collapsed"></ComboBox>
                            <TextBox x:Name="CarTypeBox"></TextBox>
                        </StackPanel>
                    </Grid>

                    <TextBlock x:Name="CarDisplacementPowerText">Obsah/vykon:</TextBlock>
                    <TextBox x:Name="CarDisplacementPowerBox"></TextBox>

                    <TextBlock x:Name="CarNotesText">Poznamka:</TextBlock>
                    <TextBox x:Name="CarNotesBox"></TextBox>
                </StackPanel>

                <Grid Grid.Row="1">
                    <DataGrid x:Name="OrderList" Grid.Column="1" AutoGenerateColumns="False" MouseDoubleClick="OrderList_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nazev" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Cena celkem" Binding="{Binding TotalPrice}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <StackPanel x:Name="UpdateButtons" Grid.Row="2" Orientation="Horizontal" Visibility="Collapsed">
                    <Button x:Name="ConfirmUpdateButton" Click="ConfirmUpdateButton_Click">Potvrdit</Button>
                    <Button x:Name="CancelUpdateButton" Click="CancelUpdateButton_Click" >Zrusit</Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal">
                    <Button Click="UpdateButton_Click">Upravit</Button>
                    <Button Click="DeleteButton_Click">Odstranit</Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
