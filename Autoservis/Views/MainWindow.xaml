<Window x:Class="Autoservis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Autoservis"
        mc:Ignorable="d"
        Title="Autoservis Manager" Height="750" Width="1200"
        WindowState="Maximized" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" Background="#B4B4B4">


    <Grid>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="Logo" Grid.Column="0" Source="/Images/Logo.png" Height="60" HorizontalAlignment="Left" Margin="0,0,20,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:Name="CustomersButton" 
                  Click="CustomersButton_Click" 
                        Style="{StaticResource NavButton}"
                        Width="100" Height="35">
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconMaterial Kind="Account"
                                               VerticalAlignment="Center"
                                               Height="15" Width="15"
                                               Margin="0,0,10,0"/>
                            <TextBlock Text="Zákazníci" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="CarsButton" 
                        Click="CarsButton_Click" 
                        Style="{StaticResource NavButton}"
                        Width="100" Height="35">
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconMaterial Kind="Car"
                           VerticalAlignment="Center"
                           Height="15" Width="15"
                           Margin="0,0,10,0"/>
                            <TextBlock Text="Auta" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="OrdersButton" 
                        Click="OrdersButton_Click" 
                        Style="{StaticResource NavButton}" 
                        Width="100" Height="35">
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconMaterial Kind="ClipboardText"
                           VerticalAlignment="Center"
                           Height="15" Width="15"
                           Margin="0,0,10,0"/>
                            <TextBlock Text="Zakázky" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Button x:Name="CreateOrderButton" Grid.Column="2" 
                    Click="CreateOrderButton_Click"
                    Style="{StaticResource GreenButton}"
                    Padding="20,10" Height="45">
                    <StackPanel Orientation="Horizontal">
                        <icon:PackIconMaterial Kind="ClipboardPlus"
                                           VerticalAlignment="Center"
                                           Height="20" Width="20"
                                           Margin="0,0,10,0"/>
                        <TextBlock Text="Vytvořit zakázku" VerticalAlignment="Center"/>
                    </StackPanel>

                </Button>
            </Grid>

            <Border Grid.Row="0" VerticalAlignment="Bottom" BorderBrush="White" BorderThickness="0,0,0,2" Margin="0,0,0,5"/>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="700"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,10,0,20" VerticalAlignment="Center">
                        <Label x:Name="DataListLabel" Content="Seznam zákazníků" FontSize="32" FontWeight="Normal" Foreground="Black" VerticalAlignment="Center" Padding="0"/>
                        <Button x:Name="ContextAddButton" 
                            Click="ContextAddButton_Click"
                            Style="{StaticResource GreenButton}"
                            Width="40" Height="40" Margin="15,0,0,0" FontSize="24">
                            <icon:PackIconMaterial Kind="Plus" 
                                               VerticalAlignment="Center" 
                                               Width="20" Height="20"/>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Border Grid.Column="2" Background="#D8D8D8" CornerRadius="2" Width="300" Height="35">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <icon:PackIconMaterial Kind="Magnify" 
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="Gray" 
                                                   Width="20" Height="20"/>

                                <TextBox x:Name="SearchBox" 
                                     Grid.Column="1"
                                     TextChanged="SearchBox_TextChanged"
                                     KeyDown="SearchBox_KeyDown"
                                     Background="Transparent" BorderThickness="0" 
                                     VerticalContentAlignment="Center" Padding="10,0" FontSize="14"/>

                                <Button x:Name="ClearSearchButton" Grid.Column="2" 
                                    Click="ClearSearchButton_Click"
                                    Visibility="Collapsed"
                                    Background="Transparent" BorderThickness="0" 
                                    Foreground="#999" FontWeight="Bold" FontSize="12"
                                    Width="30" Cursor="Hand">
                                    <icon:PackIconMaterial Kind="Close" 
                                                       Width="15" Height="15" 
                                                       Foreground="#999"/>
                                </Button>
                            </Grid>
                        </Border>

                        <StackPanel x:Name="CarFilters" Grid.Column="1" Orientation="Horizontal" Margin="20,0,20,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Label Content="Palivo:" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                            <ComboBox x:Name="FuelTypeComboBox" Style="{StaticResource MainComboBox}" SelectionChanged="FuelFilterSelection" Width="95" Margin="5,0,10,0"/>

                            <Label Content="Typ auta:" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                            <ComboBox x:Name="CarTypeComboBox" Style="{StaticResource MainComboBox}" SelectionChanged="CarFilterSelection" Width="95" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Row="2" Background="White">
                        <DataGrid x:Name="DataGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              MouseDoubleClick="Datagrid_MouseDoubleClick"
                              Background="White"
                              BorderThickness="0"
                              FontSize="16"       
                              RowHeight="50" 
                              HeadersVisibility="Column" 
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#EEEEEE">
                            <DataGrid.Resources>

                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#E0E0E0"/>

                                    <Setter Property="Foreground" Value="#333333"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="Height" Value="50"/>
                                    <Setter Property="Padding" Value="10,0"/>

                                    <Setter Property="BorderThickness" Value="0,0,1,2"/>
                                    <Setter Property="BorderBrush" Value="#A0A0A0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridColumnHeader">
                                                <Grid>
                                                    <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="{TemplateBinding Padding}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <ContentPresenter Grid.Column="0" 
                                                                          VerticalAlignment="Center" 
                                                                          SnapsToDevicePixels="True"/>

                                                            <Path x:Name="SortArrow" Grid.Column="1" 
                                                                  Width="10" Height="6" Margin="5,0,0,0" 
                                                                  Fill="#555555" Stretch="Fill" 
                                                                  Visibility="Collapsed" 
                                                                  Data="M0,0 L10,0 L5,5 z" 
                                                                  RenderTransformOrigin="0.5,0.5"/>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#D0D0D0"/>
                                                    </Trigger>

                                                    <Trigger Property="SortDirection" Value="Ascending">
                                                        <Setter TargetName="SortArrow" Property="Visibility" Value="Visible" />
                                                        <Setter TargetName="SortArrow" Property="RenderTransform">
                                                            <Setter.Value>
                                                                <RotateTransform Angle="180" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="SortDirection" Value="Descending">
                                                        <Setter TargetName="SortArrow" Property="Visibility" Value="Visible" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>

                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F2F2F2"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#D8D8D8"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.Resources>
                        </DataGrid>
                    </Border>
                </Grid>

                <Border Grid.Column="2" Grid.Row="1" Background="#C0C0C0" BorderBrush="#808080" BorderThickness="1" Margin="0,20,0,0">
                    <Grid>
                        <StackPanel>
                            <Image Source="/Images/car.png"
                               Height="500"
                               Opacity="0.5 "
                               Margin="0,0,0,20"/>
                            <TextBlock Text="Vyberte položku ze seznamu pro zobrazení detailu" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="20" Foreground="#555" TextWrapping="Wrap"/>

                        </StackPanel>
                        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="White" Visibility="Hidden"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Grid x:Name="OverlaySection" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1400"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#7F000000" MouseDown="OverlayBackground_MouseDown" Cursor="Hand"/>

            <Border Grid.Column="1" Background="White" BorderBrush="#DDD" BorderThickness="1,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="180" ShadowDepth="5" Opacity="0.2"/>
                </Border.Effect>
                <Frame x:Name="OverlayFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>

    </Grid>
</Window>