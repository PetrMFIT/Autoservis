<Window x:Class="Autoservis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autoservis"
        mc:Ignorable="d"
        Title="Autoservis Manager" Height="750" Width="1200"
        WindowState="Maximized" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" Background="#B4B4B4">
    <Window.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#D8D8D8"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button">
            <Setter Property="Background" Value="#4CD964"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5CE074"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logo and Nav -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="Logo" Grid.Column="0" Source="/Images/Logo.png" Height="60" HorizontalAlignment="Left" Margin="0,0,20,0"/>

            <!-- Nav buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="CustomersButton" Content="Zákazníci" Click="CustomersButton_Click" Style="{StaticResource NavButton}" Width="100" Height="35"/>
                <Button x:Name="CarsButton" Content="Auta" Click="CarsButton_Click" Style="{StaticResource NavButton}" Width="100" Height="35"/>
                <Button x:Name="OrdersButton" Content="Zakázky" Click="OrdersButton_Click" Style="{StaticResource NavButton}" Width="100" Height="35"/>
            </StackPanel>

            <Button x:Name="CreateOrderButton" Grid.Column="2" 
                    Content="Vytvořit zakázku" 
                    Click="CreateOrderButton_Click"
                    Style="{StaticResource GreenButton}"
                    Padding="20,10" Height="45"/>
        </Grid>

        <Border Grid.Row="0" VerticalAlignment="Bottom" BorderBrush="White" BorderThickness="0,0,0,2" Margin="0,0,0,5"/>
        
        
        <!-- Data table -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Label and Add button -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,10,0,20">
                    <Label x:Name="DataListLabel" Content="Seznam zákazníků" FontSize="32" FontWeight="Normal" Foreground="Black" VerticalAlignment="Center" Padding="0"/>
                    <Button x:Name="ContextAddButton" 
                            Content="+" 
                            Click="ContextAddButton_Click"
                            Style="{StaticResource GreenButton}"
                            Width="40" Height="40" Margin="15,0,0,0" FontSize="24" Padding="0,0,0,5"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <!-- Searchbox -->
                    <Border Grid.Column="2" Background="#D8D8D8" CornerRadius="2" Width="300" Height="35">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="SearchBox" KeyDown="SearchBox_KeyDown"
                                     Background="Transparent" BorderThickness="0" 
                                     VerticalContentAlignment="Center" Padding="10,0" FontSize="14"/>

                            <Button x:Name="SearchButton" Grid.Column="1" Content="Hledat" Click="SearchButton_Click"
                                    Background="Transparent" BorderThickness="0" FontWeight="Bold"/>
                        </Grid>
                    </Border>

                    <!-- Car filters -->
                    <StackPanel x:Name="CarFilters" Grid.Column="1" Orientation="Horizontal" Margin="20,0,20,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Label Content="Palivo:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="FuelTypeComboBox" SelectionChanged="FuelFilterSelection" Width="Auto" Margin="5,0,10,0"/>

                        <Label Content="Typ auta:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CarTypeComboBox" SelectionChanged="CarFilterSelection" Width="Auto" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Table -->
                <Border Grid.Row="2" Background="White">
                    <DataGrid x:Name="DataGrid" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              HeadersVisibility="Column" 
                              BorderThickness="0"
                              Background="White"
                              RowHeight="40"
                              MouseDoubleClick="Datagrid_MouseDoubleClick"
                              Padding="0">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Border>
            </Grid>

            <!-- Detail/add -->
            <Border Grid.Column="2" Grid.Row="1" Background="#C0C0C0" BorderBrush="#808080" BorderThickness="1" Margin="0,20,0,0">
                <Grid>
                    <StackPanel>
                        <Image Source="/Images/car.png"
                               Height="500"
                               Opacity="0.5 "
                               Margin="0,0,0,20"/>
                        <TextBlock Text="Vyberte položku ze seznamu pro zobrazení detailu" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="20" Foreground="#555" TextWrapping="Wrap"/>

                    </StackPanel>
                    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="White" Visibility="Hidden"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>